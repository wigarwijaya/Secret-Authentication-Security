<%- include('partials/header') %>

<div class="container jumbotron text-center">
  <div class="container p-5">
    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-3">You've Discovered My Secret!</h1>

    <% userWithSecrets.forEach(secretValue =>{ %>
      <% for (var i = 0; i < secretValue.length; ++i) { %>
        <% console.log(secretValue[i]) %>
        <p class="secret-text"><%= secretValue[i] %></p>
      <% } %>
    <% }) %>

    <hr>
    
    <% if (isAuth){ %>
      <a class="btn btn-light btn-lg" href="/logout" role="button">Log Out</a>
    <% } %>
    <a class="btn btn-dark btn-lg" href="/submit" role="button">Submit a Secret</a>
  </div>
</div>

<%- include('partials/footer') %>
